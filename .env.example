# Neureal Environment Configuration
# Copy this file to .env and fill in your values

# Blockchain Configuration
PRIVATE_KEY=your_private_key_without_0x_prefix
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453
NEURAL_TOKEN_ADDRESS=
PREDICTION_MARKET_ADDRESS=

# Database Configuration
MONGODB_URI=mongodb://neureal:neureal_password@localhost:27017/neureal
REDIS_URL=redis://:neureal_redis_password@localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1
PORT=3001
WS_PORT=3002

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api/v1
REACT_APP_WS_URL=ws://localhost:3002
REACT_APP_CHAIN_ID=8453
REACT_APP_CHAIN_NAME=Base
REACT_APP_NEURAL_TOKEN_ADDRESS=
REACT_APP_PREDICTION_MARKET_ADDRESS=
REACT_APP_WALLETCONNECT_PROJECT_ID=

# External API Keys (Optional)
COINGECKO_API_KEY=
BASESCAN_API_KEY=
ALCHEMY_API_KEY=
INFURA_API_KEY=

# Feature Flags
ENABLE_CRON_JOBS=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Production Settings (for Docker)
NODE_ENV=production
